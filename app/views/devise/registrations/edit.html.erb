<h1><%= @user.name %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, t('generic.name') %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, t('generic.email') %><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :city, t('generic.city') %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :facebook, t('generic.facebook') %>
    <%= f.text_field :facebook, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :twitter, t('generic.twitter') %>
    <%= f.text_field :twitter, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% @kitchens.each do |kitchen| %>
      <%= check_box_tag "user[kitchens][]", kitchen.id, @user.kitchens.include?(kitchen), id: "kitchen_#{kitchen.id}" %>
      <%= f.label kitchen.name %>
    <% end %>
  </div>
  <div class="form-group">
    <hr>
  </div>

  <div class="form-group">
    <%= f.label :password, t('generic.password') %> <i>(<%= t('generic.leave_password_blank') %>)</i><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('generic.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, t('generic.current_password') %> <i>(<%= t('generic.current_password_msg') %>)</i><br />
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.submit t('generic.submit'), id: 'submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<h3><%= t('generic.cancel_account') %></h3>

<div class="form-group">
  <p><%= button_to t('generic.cancel_account'), registration_path(resource_name), data: { confirm: t('generic.confirm?') }, method: :delete, class: 'btn btn-danger' %></p>
</div>

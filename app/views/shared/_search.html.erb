<%= form_for set_recipe_search, url: search_recipes_path(set_recipe_search), html: {class: 'navbar-form navbar-left'} do |f| %>
<div class="form-group">
  <%= f.label :name, class: 'hidden' %>
  <%= f.text_field :name, name: 'recipe[search]', class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.submit t('generic.search'), id: 'search', class: 'btn btn-success' %>
</div>
<% end %>

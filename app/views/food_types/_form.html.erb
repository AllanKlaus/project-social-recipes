<div id="errors">
  <% if @food_type.errors.any? %>
    <ul>
      <% @food_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<%= form_for(@food_type) do |f| %>
<div class="form-group">
  <%= f.label :name, t('generic.name') %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.submit t('generic.submit'), id: 'submit', class: 'btn btn-primary' %>
</div>
<% end %>
